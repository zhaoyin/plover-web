{
  "name": "plover-web-util",
  "version": "1.0.2",
  "description": "【插件】集成常用web中间件，提供通用web功能。",
  "main": "index.js",
  "scripts": {
    "lint": "eslint lib test",
    "test": "mocha --require should --reporter spec --recursive --bail --check-leaks --timeout 10000 test/",
    "cov": "istanbul cover _mocha -- --require should --recursive --bail --check-leaks --timeout 10000 test/ -R spec",
    "travis": "istanbul cover _mocha --report lcovonly -- --require should --recursive --bail --check-leaks --timeout 10000 test/ -R spec",
    "ci": "npm run lint && npm run test && npm run travis",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -o CHANGELOG.md -s"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "debug": "~2.2.0",
    "iconv-lite": "~0.4.13",
    "koa-bodyparser": "~2.2.0",
    "koa-conditional-get": "~1.0.3",
    "koa-csrf": "~3.0.4",
    "koa-etag": "~2.1.1",
    "koa-favicon": "~1.2.1",
    "koa-response-time": "~1.0.2",
    "koa-session": "~3.3.1",
    "path-to-regexp": "~1.6.0",
    "plover-logger": "~1.4.0",
    "qs": "~6.2.0"
  },
  "devDependencies": {
    "co": "~4.6.0",
    "conventional-changelog-cli": "~1.2.0",
    "eslint": "~3.7.1",
    "eslint-config-bce": "~1.3.0",
    "istanbul": "~0.4.5",
    "koa": "~1.2.0",
    "koa-rewrite": "~1.1.1",
    "mocha": "~3.1.0",
    "plover": "~2.8.1",
    "should": "~11.1.0",
    "supertest": "~2.0.0"
  },
  "plover": {
    "plugin": "lib/plugin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ploverjs/plover-web-util.git"
  },
  "author": "bencode@163.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ploverjs/plover-web-util/issues"
  },
  "homepage": "https://github.com/ploverjs/plover-web-util#readme"
}
